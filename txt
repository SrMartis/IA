using System;
using System.Collections.Generic;
using System.Linq;
using System.Text.RegularExpressions;

namespace Rextester
{

    public class Program {
    
        static List<Node> Lista;
        
        public static void Main(string[] args) {        
            Lista = GerarLista(18);          
                       
            ConfiguraNo(SelecionaNo(1),new int[] {2,8,12,13}, null);
            ConfiguraNo(SelecionaNo(2),new int[] {1,2,12,13}, null);
                                                
            Console.WriteLine(Lista[0].vizinhos.Count());
            
        }
        
        public static void Navegar(Node n) {
         // Configurar metodos de navegação   
        }
                              
        public static Node SelecionaNo(int index) {
            return Lista.ElementAt(index-1);
        }
                                  
        
        public static void ConfiguraNo(Node no, int[] valores, int? peso) {            
            for(int i = 0; i < valores.Length; i++) {                
                no.vizinhos.Add(Lista.ElementAt(valores[i]-1));
                if(!no.primeiro) {
                   no.peso = peso;
                }
            }
        }

                    
        public static List<Node> GerarLista(int num) {
           List<Node> Lista = new List<Node>();
        
            for(int i = 1; i <= num; i++) {
                Node no = new Node();
                if (i == 1) { //COLOCA O PRIMEIRO NÓ                   
                    no.primeiro = true;
                }
                no.visitado = false;
                no.vizinhos = new List<Node>();
                Lista.Add(no);                          
                //Console.WriteLine(no.primeiro.ToString());                                           
            }
            return Lista;
        }
        
    public class Node {
        public bool primeiro;
        public bool visitado;
        public List<Node> vizinhos;
        public int custo;
        public int? peso;    
    }
}
}

